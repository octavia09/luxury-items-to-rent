<p id="notice"><%= notice %></p>
<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="text-bold">Your booked luxury items</h1>
    <%= link_to "Browse All Items" items_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus"></i>
      Browse All Items
    <% end %>
  </div>





  <% unless @bookings.empty? %>
    <div class="row">
      <% @bookings.each do |booking| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card m-3 shadow-sm p-3 bg-body rounded">
            <h4><%= booking.item.name %></h4>
            <p><%= booking.item.category.capitalize %></p>
            <div class="d-flex justify-content-end align-items-center">
              <%= link_to 'Show', booking_path(booking), class: "btn btn-primary mr-2" %>
              <%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-warning mr-2" %>
              <%= link_to 'Cancel Booking', booking_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
